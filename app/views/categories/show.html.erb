<h1 align="center"><%= "Category: " + @category.name %></h1>

<% if !@category_articles.exists? %>
  <p class = "lead center" >There's no article in this category.</p>
  <% if logged_in? %>
    <p class = center> <%= link_to "Add an article", new_article_path %> <p>
  <% end %>
<% end %>

<div align="center">
  <% if logged_in? && current_user.admin? %>
    <div class="row">
      <span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span>
    </div>
  <% end %>
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align="center">
  <%= will_paginate @category_articles %>
</div>